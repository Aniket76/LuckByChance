<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="24dp"
    android:background="#bbddfe"
    android:orientation="vertical"
    tools:context="com.aniketvishal.luckbychance.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Better Luck Next Time"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:layout_margin="18dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RadioButton
            android:id="@+id/easy_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textAppearance="?android:textAppearanceSmall"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/medium_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textAppearance="?android:textAppearanceSmall"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/hard_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textAppearance="?android:textAppearanceSmall"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/expert_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert"
            android:textAppearance="?android:textAppearanceSmall"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp">


            <Button
                android:id="@+id/buttonp1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:onClick="player1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:id="@+id/tv_p1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/tv_p1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp">


            <Button
                android:id="@+id/buttonp2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:onClick="player2"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:id="@+id/tv_p2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/tv_p2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is the Winner?"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="18dp"/>


    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:onClick="reset"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:id="@+id/tv_p3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:layout_gravity="bottom"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/tv_p3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="22sp"
                    android:layout_gravity="bottom"
                    android:padding="10dp"/>


            </LinearLayout>


            <Button
                android:id="@+id/buttonp3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Player 3"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:onClick="player3"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:id="@+id/tv_p4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:layout_gravity="bottom"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/tv_p4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="22sp"
                    android:layout_gravity="bottom"
                    android:padding="10dp"/>


            </LinearLayout>


            <Button
                android:id="@+id/buttonp4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Player 4"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:onClick="player4"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>
